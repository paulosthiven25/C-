@model Jogador

    <form asp-action="Cadastrar" asp-controller="Jogador">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento"></label>
            <input asp-for="DataNascimento" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Altura"></label>
            <input asp-for="Altura" class="form-control" />
        </div>

        <div class="form-group">
            <select asp-for="TimeId" asp-items="@ViewBag.times" class="form-control">
                <option value="0">Selecione</option>
            </select>
        </div>
        <botao texto="Cadastrar"></botao>
    </form>