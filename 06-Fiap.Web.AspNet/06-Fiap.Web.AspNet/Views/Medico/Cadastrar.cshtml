        <h1>Cadastrar de Médico</h1>

        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Crm"></label>
                <input asp-for="Crm" class="form-control" />
            </div>

            <div class=form-group>
                <label asp-for="Especialidade"></label>
                <select asp-for=Especialidade asp-items="@Html.GetEnumSelectList<Especialidade>()" class="form-control">
                    <option>Selecione</option>
                </select>
            </div>

            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </form>

