@model  Usuario
@{
    ViewData["Title"] = "usuario";
}

<h1>Cadastro de Usuarios</h1>

@if (Model!= null)
{ 
<p>@Model.Email</p>
<p>@Model.DataNascimento</p>
<p>@Model.Nome</p>
}
<div>@TempData["msg"]</div>

<form action="/usuario/Cadastrar" method="post">
    <div>
        <label>Nome</label>
        <input type="text" name="nome" />
    </div>

    <div>
        <label>Data de Nascimento </label>
        <input type="datetime" name="DataNascimento" />
    </div>

    <div>
        <label>Email </label>
        <input type="email" name="email" />

    </div>
    <input type="submit" value="Enviar" />
    <a asp-controller="Usuario" asp-action="Listar">Listar</a>
</form>

